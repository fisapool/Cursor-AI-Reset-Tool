{
  "name": "cursor-reset-app",
  "version": "1.0.0",
  "description": "Desktop application for Cursor AI reset and management",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "cursor",
    "ai",
    "reset",
    "desktop",
    "application"
  ],
  "author": "FISAMY",
  "license": "MIT",
  "build": {
    "appId": "com.fisamy.cursor-reset-app",
    "productName": "Cursor Reset App",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": ["dmg", "zip"],
      "darkModeSupport": true,
      "icon": "assets/icons/icon.icns",
      "hardenedRuntime": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icons/icon.ico",
      "publisherName": "FISAMY",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cursor Reset App",
      "installerIcon": "assets/icons/icon.ico",
      "uninstallerIcon": "assets/icons/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  },
  "dependencies": {
    "cursor-reset-tool": "^1.0.2"
  },
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8"
  }
}
